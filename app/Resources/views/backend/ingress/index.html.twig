{% extends 'backend/table.html.twig' %}

{% set new = 
    {
        "route": "ingress_new",
        "title": "Nuevo ingreso"
    }
%}


{% block thead %}
    <tr>
        <th>Nombre</th>
        <th>Accion</th>
    </tr>
{% endblock %}
{% block tfoot %}
    <tr>
        <th>Nombre</th>
        <th>Accion</th>
    </tr>
{% endblock %}
{% block tbody %}
    {% for ingress in ingresses %}
        <tr>
            <td>{{ ingress.name }}</td>
            <td>
                <a href="{{ path('ingress_show', { 'id': ingress.id }) }}"><span class="glyphicon glyphicon-zoom-in" aria-hidden="true"></span></a>
                <a href="{{ path('ingress_edit', { 'id': ingress.id }) }}"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></a>
            </td>
        </tr>
    {% endfor %}
{% endblock %}

{% block section %}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <h1>
      Ingresos
      <small>Listado</small>
    </h1>
    <ol class="breadcrumb">
      <li><a href="{{ path('admin') }}"><i class="fa fa-dashboard"></i> Inicio</a></li>
      <li class="active">Ingresos</li>
    </ol>
  </section>
  {{parent()}}
</div>     
{% endblock %}
